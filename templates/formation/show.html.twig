{% extends 'layout.html.twig' %}

{% block title %}{{ entity.nom }} | P'tites Sc√®nes{% endblock %}

{% block page_content %}

<div class="formation row justify-content-center">
    <div class="col-10 mt-3 px-0 pb-5">
        <div class="card">
            <div class="card-body p-0">
                <div class="card-group">
                    <div class="card col-5 bg-dark px-0 border-0">
                        {% if mediaWithPhotoIdent is not empty %}
                            <img class="card-img-top" src="{{ asset('/uploads/img/' ~ mediaWithPhotoIdent.lien) }}" alt="{{ mediaWithPhotoIdent.titre }}">
                        {% elseif entity.image is not empty %}
                            <img class="card-img-top" src="{{ asset('/uploads/img/' ~ entity.image.path) }}" alt="{{ entity.nom }}">
                        {% else %}
                            <img class="card-img-top" src="{{ asset('/img/form_def.jpg') }}" alt="Card image cap">
                        {% endif %}
                    </div>
                    <div class="card col-7 bg-dark text-light text-center p-3">
                        <h2 class="card-title text_formation">
                            {{ entity.nom }}
                        </h2>
                        <p class="small mt-3">{{ entity.type }}</p>
                        {% if entity.styles is not empty %}
                            <div class="btn-group mt-3 align-self-center">
                                <div class="btn btn-light disabled">
                                    {{ 'user.formation.show.style'|trans }} : 
                                </div>
                                <div class="btn btn-formation disabled">
                                    {{ entity.styles ? entity.styles|join(' | ') : '' }}
                                </div>
                            </div>
                        {% endif %}
                        <hr>
                        {% if entity.presentation is not empty %}
                            <p class="card-text text-light text-left mt-3"> {{ entity.presentation }} </p>
                        {% endif %}
                        <hr>
                        <p>{{ entity.localisation }}</p>
                        <hr>
                        <p>Contact : </p>
                    </div>
                </div>
            </div>

            <div class="card-footer text-right bg-light">
                <div class="btn-group">
                    <a href="{{ path('formation_index') }}" class="btn btn-formation text-light">Retour</a>
                    {% if is_granted('edit', entity) %}
                        <a href="{{ path('formation_edit', {'id': entity.id }) }}" class="btn btn-dark">Modifier</a>
                        {{ include('formation/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock page_content %}