{# C'est visible seulement si l'user connecté est l'usercreateur sont pareils #}
<form method="post" action="{{ path('formation_delete', {'id': entity.id }) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cette formation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button class="btn">Supprimer</button>
</form>