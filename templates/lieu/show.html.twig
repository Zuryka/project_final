{% extends 'layout.html.twig' %}

{% block title %}{{ entity.nom }} | P'tites Sc√®nes{% endblock %}

{% block page_content %}



<div class="lieu pb-4 pl-0">
    <div class="row-12  mt-3 mb-3 justify-content-center">
        <div class="card-group">
            <div class="card col-3 offset-1 text-light bg-lieu border-dark text-center">
                {% if entity.getMediaWithPhotoIdent() is not empty %}
                    <img class="card-img-top mt-3 mb-3" src="{{ asset('/uploads/img/' ~ entity.getMediaWithPhotoIdent().lien) }}" alt="{{ entity.getMediaWithPhotoIdent().titre }}">
                {% elseif entity.image is not empty %}
                    <img class="card-img-top mt-3 mb-3" src="{{ asset('/uploads/img/' ~ entity.image.path) }}" alt="{{ entity.nom }}">
                {% else %}
                    <img class="card-img-top mt-3 mb-3" src="{{ asset('/img/lieu_def.jpg') }}" alt="Card image cap">
                {% endif %}
            </div>

            <div class="card col-3 text-light bg-lieu border-dark text-center">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-lieu">{{ entity.nom }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.type }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.adresse }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.CodePostal() }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.ville }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.latitude }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.longitude }}</li>
                        <li class="list-group-item bg-lieu">{{ entity.NumTelephone() }}</li>
                    </ul>
                </div>
            </div>

            <div class="card col-4 text-light bg-lieu border-dark text-center">
                <div class="card-body">
                    <h5 class="card-text"> {{ entity.presentation }} </h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        {% if is_granted('edit', entity) %}
            <div class="col-1 justify-content-center">
                <a href="{{ path('lieu_index') }}"><button class="btn bg-lieu text-light">Retour</button></a>
            </div>
            <div class="col-1 justify-content-center">
                <a href="{{ path('lieu_edit', {'id': entity.id }) }}"><button class="btn bg-lieu text-light">Modifier</button></a>
            </div>
            <div class="col-1 justify-content-center">
                {{ include('lieu/_delete_form.html.twig') }}
            </div>
        {% else %}
            <a href="{{ path('lieu_index') }}"><button class="btn bg-lieu text-light">Retour</button></a>
        {% endif %}
    </div>
</div>

