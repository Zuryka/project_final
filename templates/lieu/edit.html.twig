{% extends 'layout.html.twig' %}

{% block title %}Modifier {{ entity.nom}} | P'tites Sc√®nes{% endblock %}

{% block page_content %}
    <div class="lieu row justify-content-center">
        <div class="col-10 mt-3 px-0 pb-5">
            {{ form_start(form) }}
                {% embed 'decorator/_card.html.twig' %}
                    {% block header %}
                        <h1>Modification d'un lieu</h1>
                    {% endblock %}
        
                    {% block body %}
                        {{ include('lieu/_form.html.twig', {'button_label': 'Modifier'}) }}
                    {% endblock %}
        
                    {% block footer %}
                        <a class="btn btn-dark" href="{{ path('lieu_show', {'id': entity.id }) }}">Annuler</a>
                        <button class="btn btn-lieu text-light">{{ button_label|default('Enregistrer') }}</button>
                    {% endblock %}
                {% endembed %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}