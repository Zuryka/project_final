{% extends 'layout.html.twig' %}

{% block page_content %}
    <ul class="list-group">
        {% if entity.nomArtiste %}
            <li class="list-group-item">{{ entity.nomArtiste }}</li>
        {% endif %}
        {% if entity.styles %}
            {% for i in 0..(entity.styles|length - 1) %}
                <li class="list-group-item">{{ entity.styles[i] }}</li>
            {% endfor %}
        {% endif %}
        <li class="list-group-item">{{ entity.nom }}</li>
        <li class="list-group-item">{{ entity.prenom }}</li>
        <li class="list-group-item">{{ entity.dateInscription|date('d-m-Y H:i:s') }}</li>
        {% if entity.presentation %}
            <li class="list-group-item">{{ entity.presentation }}</li>
        {% endif %}
        {% if entity.niveau %}
            <li class="list-group-item">{{ entity.niveau }}</li>
        {% endif %}
        {% if entity.instruments %}
            {% for i in 0..(entity.instruments|length - 1) %}
                <li class="list-group-item">{{ entity.instruments[i] }}</li>
            {% endfor %}
        {% endif %}
        {% if entity.instrumentsComments %}
            <li class="list-group-item">{{ entity.instrumentsComments }}</li>
        {% endif %}
        {% if entity.chants %}
            {% for i in 0..(entity.chants|length - 1) %}
                <li class="list-group-item">{{ entity.chants[i] }}</li>
            {% endfor %}
        {% endif %}
        {% if entity.chantsComments %}
            <li class="list-group-item">{{ entity.chantsComments }}</li>
        {% endif %}
    </ul>

    <a href="{{ path('user_index') }}" class="btn btn-secondary">Retour</a>
    {% if entity.username == app.user.username %}
        <a href="{{ path('user_edit', {'username': entity.username}) }}" class="btn btn-dark"><i class="fa fa-pencil-alt"></i></a>
        <div class="float-right">
            <a href="{{ path('user_delete', {'username': entity.username}) }}" class="btn btn-primary"><i class="text-dark fa fa-trash"></i></a>
        </div>
    {% endif %}
{% endblock page_content %}

