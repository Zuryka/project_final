{% extends 'layout.html.twig' %}

{% block title %}{{ entity.prenom }} | P'tites Scènes{% endblock %}

{% block page_content %}

<div class="row justify-content-center">
    <div class="col-10 mt-3">
        <div class="card text-white bg-danger border-dark text-center">
            <h2 class="card-title"> Mon compte </h2>
            <div class="card-body">
            <p class="card-text">Pseudo : {{ entity.username }}</p>
            <p class="card-text">Nom :{{ entity.nom }}, Prenom : {{ entity.prenom }}</p>
            <p class="card-text">Email : {{ entity.email }} </p>
            <p class="card-text">Adresse : {{ entity.adresse }}
            Code Postal : {{ entity.codePostal }}
            Ville : {{ entity.ville }}</p>
            <p class="card-text">Numéro de telephone : {{ entity.numTelephone }}</p>
            <p class="card-text">Status Professionnel : {{ entity.niveau }}<p/>
            </div>
        </div>
        <a href="{{ path('user_index') }}" class="btn btn-secondary">Retour</a>
        {% if entity.username == app.user.username %}
            <a href="{{ path('user_edit', {'username': entity.username}) }}" class="btn btn-dark"><i class="fa fa-pencil-alt"></i></a>
            <div class="float-right">
                <a href="{{ path('user_delete', {'username': entity.username}) }}" class="btn btn-primary"><i class="text-dark fa fa-trash"></i></a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock page_content %}