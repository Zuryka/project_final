{% extends 'layout.html.twig' %}

{% block title %} Modifier votre profil artiste | P'tites Sc√®nes{% endblock %}

{% block page_content %}
    
    <div class="artistes row justify-content-center">
        <div class="col-10 px-0 mt-3 pb-5">
            {{ form_start(form) }}
                {% embed 'decorator/_card.html.twig' %}
                    {% block header %}
                        <h1> {{ 'user.artiste.edit.title'|trans }} </h1>
                    {% endblock header %}

                    {% block body %}
                        <div class="row">
                            <div class="col-md-8">
                                {{ form_row(form.image) }}
                            </div>
                            <div class="col-md-4 col-lg-2">
                            {% if entity is defined and entity.image is not empty %}
                                <img class="w-100" src="{{ asset('/uploads/img/' ~ entity.image.path) }}" alt="{{ entity.nom }}" />
                                {{ form_row(form.deleteImage) }}
                            {% endif %}
                            </div>
                        </div>     
                        {{ form(form) }}
                    {% endblock body %}

                    {% block footer %}
                        <a href="{{ path('user_index') }}" class="btn btn-dark">Annuler</a>
                        <button type="submit" class="btn btn-artiste">Enregistrer</button>
                    {% endblock footer %}

                {% endembed %}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock page_content %}